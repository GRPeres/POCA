@page "/teste"
@using MudBlazor
@using POCA.Web
@inject UserSessionService UserSessionInstance

<h1>teste</h1>

<MudTextField @bind-Value="teste" Label="Pesquisar" Variant="Variant.Outlined" Class="mb-2" />
<MudButton OnClick="OnSearchClicked" Variant="Variant.Filled" Color="Color.Primary">
    Pesquisar
</MudButton>

@code
{
    [Inject] ISnackbar Snackbar { get; set; }
    
    public string teste;

    private void OnSearchClicked()
    {
        // Simula lógica de pesquisa
        if (string.IsNullOrWhiteSpace(teste))
        {
            Snackbar.Add("Por favor, digite algo para pesquisar.", Severity.Warning);
        }
        else
        {
            Snackbar.Add($"Pesquisa por '{teste}' realizada com sucesso!", Severity.Success);
        }
    }
}