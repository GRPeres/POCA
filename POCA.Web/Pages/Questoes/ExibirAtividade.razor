@page "/atividade"
@inject AtividadeState AtividadeState

<PageTitle>Atividade Criada</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
    <MudText Typo="Typo.h5" Class="mb-4">Atividade Criada</MudText>

    @if (AtividadeState.QuestoesSelecionadas is null || !AtividadeState.QuestoesSelecionadas.Any())
    {
        <MudAlert Severity="Severity.Warning">
            Nenhuma questão foi selecionada. Volte à montagem para criar uma atividade.
        </MudAlert>
    }
    else
    {
        <MudTable Items="AtividadeState.QuestoesSelecionadas" Dense="true" Hover="true" Bordered="true">
            <HeaderContent>
                <MudTh>#</MudTh>
                <MudTh>Enunciado</MudTh>
                <MudTh>Dificuldade</MudTh>
                <MudTh>Tema</MudTh>
            </HeaderContent>
            <RowTemplate Context="questao">
                <MudTd>@(AtividadeState.QuestoesSelecionadas.IndexOf(questao) + 1)</MudTd>
                <MudTd>@questao.EnunciadoQuestao</MudTd>
                <MudTd>@questao.DificuldadeQuestao</MudTd>
                <MudTd>@questao.TemaQuestao</MudTd>
            </RowTemplate>
        </MudTable>
    }
</MudContainer>